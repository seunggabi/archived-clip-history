{
  "manifest_version": 2,

  "name": "ClipHistory",
  "description": "당신의 소중한 복사 히스토리 보관해드립니다.\nSave your copy list, just for you",
  "version": "0.0.0",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup/index.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["app.js"]
    }
  ],

  "permissions": [
    "tabs",
    "*://*/*",
    "cookies",
    "activeTab",
    "storage"
  ]
}
