{
  "manifest_version": 2,

  "name": "ClipHistory",
  "description": "당신의 소중한 복사 히스토리 보관해드립니다.\nSave your copy list, just for you",
  "version": "0.0.0",

  "browser_action": {
    "default_popup": "popup/index.html"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.naver.com/*",
        "*://*.tistory.com/*",
        "*://*.github.com/*",
        "*://*.youtube.com/*",
        "*://*.daum.net/*",
        "*://*.coupang.com/*"
      ],
      "js": [
        "common/lodash.min.js",
        "js/history.js",
        "js/logger.js",
        "js/event.js",
        "app.js"
      ]
    }
  ],

  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "tabs",
    "activeTab",
    "storage"
  ]
}
